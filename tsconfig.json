{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["dom","es2017"],
    "target": "es2015",
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
